    
<h3 style="margin-top: 3%">Register</h3>
    <form id="signup" name="signup" method="post" action="/signup">
        <div class="row">
            <div class="col s12">
                <div class="row">
                    <p class="flat-text small"></p>
                    <div class="input-field col s6">
                        <label for="firstname">First Name</label>
                        <input type="text" class="form-control" name = "firstname">
                    </div>
                    <div class="input-field col s6">
                        <label for="lastname">Last name</label>
                        <input type="text" class="form-control" name = "lastname">
                    </div>
                </div>

            <div class="row">
                <div class="input-field col s12">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" aria-describedby="emailHelp" name = "email">
                </div></div>
                <div class="row">
                <div class="input-field col s12">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name = "password">
                </div>
                </div>
                <div class="row">
                    <button id ="reg_submit" class="btn waves-effect waves-light grey darken-4 btn-signup" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
        </div>
    </form>

<div class="fixed-action-btn">
    <a id="menu" onclick="$('.tap-target').tapTarget('open')" class="waves-effect waves-light btn btn-floating btn-large grey darken-4">
        <i class="material-icons">favorite_border</i>
    </a>
    </div>

    <!-- TAP TARGET CONTENT -->
    <div class="tap-target grey darken-4" data-activates="menu">
    <div class="tap-target-content white-text">
        <h5>Register!</h5>
        <p class="white-text">
            Please sign up to be able to use the functions of the page. <br>
            You will be able to add your own activities, and view other's suggestions!
        </p>
    </div>
</div>

